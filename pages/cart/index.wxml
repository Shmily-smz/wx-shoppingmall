<!-- pages/cart/index.wxml -->
<view class="reviece_adress" hover-class="none" hover-stop-propagation="false">
    <view class="adress_btn" wx:if="{{!adress.userName}}">
        <button type="primary" plain bindtap="handleChooseAdress">收货地址</button>
    </view>
    <view wx:else class="adress" hover-class="none" hover-stop-propagation="false">
        <view class="user_info">
            <view>{{adress.userName}}</view>
            <view>{{adress.all}}</view>
        </view>
        <view class="userPhone" hover-class="none" hover-stop-propagation="false">
            {{adress.telNumber}}
        </view>
    </view>
    <view class="cart_content">
        <view class="cart_title">购物车</view>
        <view class="cart_main">
           <block wx:if="{{cart.length!=0}}">
                <view class="cart_item" wx:for="{{cart}}" wx:key="goods_id">
               <view class="check_wrap">
                  <checkbox-group data-index="{{item.goods_id}}" bindchange="handelitemChange">
                      <checkbox class=""  checked="{{item.checked}}" color="">
                          
                      </checkbox>
                  </checkbox-group>
               </view>
               <navigator class="cart_img_wrap" target="" url="" hover-class="navigator-hover" open-type="navigate">
                   <image class="" src="{{item.goods_big_logo}}" mode="widthFix" lazy-load="false" binderror="" bindload="">
                       
                   </image>
               </navigator>
               <view class="cart_Info_wrap">
               <view class="goods_name">{{item.goods_name}}</view>
               <view class="goods_price_row">
                 <view class="goods_price">{{item.goods_price}}</view>
                 <view class="cart_num_tool">
                    <view class="num_edit" bindtap="changenum" data-operation="{{-1}}" data-index="{{item.goods_id}}">-</view>
                    <view class="goods_num">{{item.num}}</view>
                     <view class="num_edit" bindtap="changenum" data-operation="{{1}}" data-index="{{item.goods_id}}">+</view>
                 </view>
               </view>
               </view>
            </view>
           </block>
           <block wx:else>
               <image class="" src="https://gimg2.baidu.com/image_search/src=http%3A%2F%2Fhbimg.b0.upaiyun.com%2Fa4064bdab5f6c800ed664014f3eb7d13a4dd25b3138d0-hYHe07_fw658&refer=http%3A%2F%2Fhbimg.b0.upaiyun.com&app=2002&size=f9999,10000&q=a80&n=0&g=0n&fmt=jpeg?sec=1624783185&t=c9809d309ae758150dd2d75049cafe6f" mode="widthFix" lazy-load="false" binderror="" bindload="">                 
               </image>
           </block>
        </view>
    </view>

    <view class="bootom_tab">
         <view class="check_wrap1">
                  <checkbox-group bindchange="allChange">
                      <checkbox class="" checked="{{allChecked}}" color="">
                          全选
                      </checkbox>
                  </checkbox-group>
               </view>
               <view class="totalnum">
                   <view>
                       合计:{{totalPrice}}
                   </view>
                     <view class="aa">
                         包含运费
                     </view>
                       
               </view>
               <view class="subnum" hover-class="none" hover-stop-propagation="false" bindtap="showAll">
                   结算{{totalNum}}
               </view>
    </view>
</view>