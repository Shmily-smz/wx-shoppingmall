    </view>
    <navigator url="/pages/feedback/index" class="app_info_item" hover-class="none" hover-stop-propagation="false">意见反馈</navigator>
    <view class="app_info_item" hover-class="none" hover-stop-propagation="false">关于我们</view>
</view>
