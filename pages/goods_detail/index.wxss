page {
  padding-bottom: 90rpx;
}
swiper {
  height: 68vw;
  text-align: center;
}
swiper .lunbotu_image {
  width: 60%;
}
.goods_price {
  padding: 15rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--themeColor);
}
.goods_name_row {
  display: flex;
  border-bottom: 5rpx solid #dedede;
  padding-bottom: 20rpx;
}
.goods_name_row .goods_name {
  flex: 5;
  padding: 0 20rpx;
  border-right: 1px solid black;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_name_row .goods_collect {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  align-items: center;
}
.goods_info .infoTitle {
  font-size: 32rpx;
  color: var(--themeColor);
  font-weight: 600;
  padding: 20rpx;
  border-bottom: 5rpx solid #dedede;
}
.goods_info .infoContent {
  padding-top: 20rpx;
}
.bottom-tap {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  height: 90rpx;
  background-color: #fff;
  border-top: 1px solid #ccc;
}
.bottom-tap .tab-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 24srpx;
  position: relative;
}
.bottom-tap .tab-item button {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.bottom-tap .btn_cart {
  flex: 2;
  color: #fff;
  background-color: #ffa500;
  font-size: 30rpx;
}
.bottom-tap .btn_buy {
  flex: 2;
  font-size: 30rpx;
  background-color: #eb4450;
  color: #fff;
}
.bottom-tap .flexon {
  display: flex;
  justify-content: center;
  align-items: center;
}
