
    <view class="adress" hover-class="none" hover-stop-propagation="false">
        <view class="user_info">
            <view>{{adress.userName}}</view>
            <view>{{adress.all}}</view>
        </view>
        <view class="userPhone" hover-class="none" hover-stop-propagation="false">
            {{adress.telNumber}}
        </view>
    </view>
     <view class="cart_content">
        <view class="cart_title">购物车</view>
        <view class="cart_main">
         
                <view class="cart_item" wx:for="{{cart}}" wx:key="goods_id">
              
               <navigator class="cart_img_wrap" target="" url="" hover-class="navigator-hover" open-type="navigate">
                   <image class="" src="{{item.goods_big_logo}}" mode="widthFix" lazy-load="false" binderror="" bindload="">
                       
                   </image>
               </navigator>
               <view class="cart_Info_wrap">
               <view class="goods_name">{{item.goods_name}}</view>
               <view class="goods_price_row">
                 <view class="goods_price">{{item.goods_price}}</view>
                 <view class="cart_num_tool">                
                    <view class="goods_num">x {{item.num}}</view>                  
                 </view>
               </view>
               </view>
            </view>
          
          
        </view>
    </view>
     <view class="bootom_tab">
        
               <view class="totalnum">
                   <view>
                       合计:{{totalPrice}}
                   </view>
                     <view class="aa" >
                         包含运费
                     </view>
                       
               </view>
               <view class="subnum" hover-class="none" hover-stop-propagation="false" bind:tap="handelOrderPay">
                  支付({{totalNum}})
               </view>
    </view>
