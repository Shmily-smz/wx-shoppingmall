.tabs {
  display: flex;
}
.tabs .tabs-items {
  flex: 1;
  justify-content: center;
  align-items: center;
  display: flex;
  padding: 15rpx 0;
  color: #666;
}
.tabs .active {
  border-bottom: 1px solid var(--themeColor);
}
.order_main .order_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.order_main .order_item .order_number {
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
}
.order_main .order_item .order_price {
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
}
.order_main .order_item .order_price .order_price_number {
  color: var(--themeColor);
}
.order_main .order_item .order_time {
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
}
