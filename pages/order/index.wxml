<view  class="tabs" hover-class="none" hover-stop-propagation="false">
        <view  wx:for="{{tabs}}" wx:key="id" 
        class="tabs-items,{{currentIndex==index?'active':''}}"
         bindtap="tabsClick"
         data-index="{{index}}"
         >
            {{item.name}}
        </view> 
    </view>
    <view class="order_main">
   
             <view bindtap="getData" wx:for="{{orders}}" wx:key="order_id" class="order_item">
           <view class="order_number">
               <view class="order_number_text">订单编号</view>
               <view class="order_numver_number">{{item.order_number}}</view>
           </view>
            <view class="order_price">
                 <view class="order_price_text">订单价格</view>
               <view class="order_price_number">￥{{item.order_price}}</view>
            </view>
            <view class="order_time">
                 <view class="order_time_text">订单日期</view>
               <view class="order_time_number">{{item.create_time_cn}}</view>
            </view>
       
        </view>
       
    </view>
