<view class="tabs" hover-class="none" hover-stop-propagation="false">
    <view wx:for="{{tabs}}" wx:key="id" class="tabs-items,{{currentIndex==index?'active':''}}" hover-class="none" hover-stop-propagation="false" bindtap="tabsClick" data-index="{{index}}">
        {{item.name}}
    </view>
</view>
<view class="collect_main" hover-class="none" hover-stop-propagation="false">
    <view class="collect_title">
        <text class="collect_tips active">全部</text>
        <text class="collect_tips" selectable="false" space="false" decode="false">正在热卖</text>
        <text class="collect_tips" selectable="false" space="false" decode="false">即将上线</text>
    </view>
    <view class="first_tab" hover-class="none" hover-stop-propagation="false">
        <navigator url="/pages/goods_detail/index?goods_id={{item.goods_id}}" wx:for="{{collectList}}" wx:key="goods_id" class="goods_item">
            <view class="goods_img" hover-class="none" hover-stop-propagation="false">
                <image class="" src="{{item.goods_small_logo?item.goods_small_logo:'http://image1.suning.cn/uimg/b2c/newcatentries/0000000000-000000000606020881_1_400x400.jpg'}}" mode="widthFix" lazy-load="false" binderror="" bindload=""></image>
            </view>
            <view class="goods_wrap" hover-class="none" hover-stop-propagation="false">
                <view class="goods_name">{{item.goods_name}}</view>
                <view class="goods_price" hover-class="none" hover-stop-propagation="false">
                    {{item.goods_price}}
                </view>
            </view>
        </navigator>
    </view>
</view>